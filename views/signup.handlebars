<div class="column">
<h2 class="title pb-4">Create your account:</h2><hr>
<form class="signup-form">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" placeholder="Enter username" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" placeholder="Enter email address" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" placeholder="Enter password" />
  </div>
  <div>
    <button type="submit" class="button is-link">Signup</button>
  </div>
</form>
</div>

<!-- javascript file-->
<script src="/javascript/signup.js"></script>